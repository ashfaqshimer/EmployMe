<%- include('partials/head.ejs') %>
<link rel="stylesheet" href="/css/home.css">
<link rel="stylesheet" href="/css/footer.css">
<!-- Custom styles for this template -->
<link href="/css/jobseeker/login.css" rel="stylesheet" />
</head>

<body class="text-center">
    <%- include('partials/navbar.ejs') %> 
    <% if (error){ %>
	<div class="alert alert-danger" role="alert">
		<%= error %>
	</div>
	<% } %>
	<form class="center form-signin mt-5 mb-3 p-2" action="/login/jobseeker" method="POST">
		<h1 class="h3 mb-3 font-weight-normal">Job-Seeker Sign In</h1>
		<label for="email" class="sr-only">Your Email</label>
		<input
			type="email"
			id="email"
			name="email"
			class="form-control"
			placeholder="Your e-mail"
			required
			autofocus
		/>
		<label for="inputPassword" class="sr-only">Password</label>
		<input
			type="password"
			id="inputPassword"
			name="password"
			class="form-control"
			placeholder="Password"
			required
		/>

		<button class="btn btn-lg btn-primary btn-block mt-5" type="submit">Sign in</button>
	</form>
	<div p-5>
		<p>Don't have an account?</p>
		<a href="/signup">Register as a Job-Seeker</a>
	</div>
	<!-- <a href="/jobseeker">Go to Job Seeker page (Test)</a> -->

	<%- include('partials/footer.ejs') %>
</body>
</html>
